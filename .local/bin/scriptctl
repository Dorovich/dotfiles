#!/bin/sh
#
#  Llama al script correspondiente,
#  o presenta una seleccion de los
#  disponibles. $SCRIPTSDIR debe
#  estar definido.
#

case $1 in
    "music")		$SCRIPTSDIR/dm-music;;
    "pass")		$SCRIPTSDIR/dm-pass;;
    "sinks")		$SCRIPTSDIR/dm-sinks;;
    "kill")		$SCRIPTSDIR/dm-kill;;
    "editcfg")		$SCRIPTSDIR/dm-editcfg;;
    "snippet")		$SCRIPTSDIR/dm-snippet $2;;
    "volume") 		$SCRIPTSDIR/dm-volume $2;;
    "volume-up") 	$SCRIPTSDIR/dm-volume 1;;
    "volume-down") 	$SCRIPTSDIR/dm-volume 2;;
    "scrot") 		$SCRIPTSDIR/dm-scrot $2;;
    "quit") 		$SCRIPTSDIR/dm-quit;;
    "steamapp")		$SCRIPTSDIR/dm-steamapp;;
    "youtube") 		$SCRIPTSDIR/dm-youtube;;
    "wifi")		$SCRIPTSDIR/dm-wifi;;
    *) 
	choice=$(echo "music\npass\nsinks\nkill\neditcfg\nsnippet\nvolume\nscrot\nyoutube\nsteamapp\nwifi\nquit" | dmenu -p "Script:")
	case $choice in
		"") exit;;
		"snippet")
        		option=$(echo "load\nsave" | dmenu -p "Snippet option:")
			case $option in
				"load") scriptctl snippet 1;;
				"save") scriptctl snippet 2;;
			esac;;
		"screeot")
        		option=$(echo "full\nactive\nselect\ncopy" | dmenu -p "Screeot option:")
			case $option in
				"full") scriptctl scrot 1;;
				"active") scriptctl scrot 2;;
				"select") scriptctl scrot 3;;
				"copy") scriptctl scrot 4;;
			esac;;
		"volume")
        		option=$(echo "up\ndown" | dmenu -p "Volume option:")
			case $option in
				"up") scriptctl volume 1;;
				"down") scriptctl volume 2;;
			esac;;
		*) scriptctl $choice;;
	esac
	;;
esac
