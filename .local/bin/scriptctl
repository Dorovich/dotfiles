#!/bin/sh
#
#  Llama al script correspondiente,
#  o presenta una seleccion de los
#  disponibles. $SCRIPTSDIR debe
#  estar definido.
#

case $1 in
    "music")		$SCRIPTSDIR/music.sh;;
    "password")		$SCRIPTSDIR/password.sh;;
    "soundout")		$SCRIPTSDIR/soundout.sh;;
    "kill")		$SCRIPTSDIR/kill.sh;;
    "editcfg")		$SCRIPTSDIR/editcfg.sh;;
    "snippet")		$SCRIPTSDIR/snippet.sh $2;;
    "volume") 		$SCRIPTSDIR/volume.sh $2;;
    "volume-up") 	$SCRIPTSDIR/volume.sh 1;;
    "volume-down") 	$SCRIPTSDIR/volume.sh 2;;
    "screenshot") 	$SCRIPTSDIR/screenshot.sh $2;;
    "wmquit") 		$SCRIPTSDIR/wmquit.sh;;
    "youtube") 		$SCRIPTSDIR/youtube.sh;;
    *) 
	choice=$(echo "music\npassword\nsoundout\nkill\neditcfg\nsnippet\nvolume\nscreenshot\nyoutube" | dmenu -p "Script:")
	case $choice in
		"") exit;;
		"snippet")
        		option=$(echo "load\nsave" | dmenu -p "Snippet option:")
			case $option in
				"load") scriptctl snippet 1;;
				"save") scriptctl snippet 2;;
			esac;;
		"screenshot")
        		option=$(echo "full\nactive\nselect\ncopy" | dmenu -p "Screenshot option:")
			case $option in
				"full") scriptctl screenshot 1;;
				"active") scriptctl screenshot 2;;
				"select") scriptctl screenshot 3;;
				"copy") scriptctl screenshot 4;;
			esac;;
		"volume")
        		option=$(echo "up\ndown" | dmenu -p "Volume option:")
			case $option in
				"up") scriptctl volume 1;;
				"down") scriptctl volume 2;;
			esac;;
		*) scriptctl $choice;;
	esac
	;;
esac
