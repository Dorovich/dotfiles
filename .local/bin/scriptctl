#!/bin/sh

scriptdir="${HOME}/.config/herbstluftwm/scripts"

case $1 in
    "music")
        $scriptdir/music.sh
        ;;
    "password")
        $scriptdir/password.sh
        ;;
    "soundout")
        $scriptdir/soundout.sh
        ;;
    "kill")
        $scriptdir/kill.sh
        ;;
    "editcfg")
        $scriptdir/editcfg.sh
        ;;
    "snippet")
        $scriptdir/snippet.sh $2
        ;;
    "volume")
        $scriptdir/volume.sh $2
        ;;
    "screenshot")
        $scriptdir/screenshot.sh $2
        ;;
    "wmquit")
        $scriptdir/wmquit.sh
        ;;
    *)
        exit
        ;;
esac
