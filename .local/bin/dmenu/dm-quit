#!/bin/sh

if [ -f $HOME/.dmenurc ]; then
  . $HOME/.dmenurc
else
  DMENU='dmenu -h 18 -i'
fi

confirmation=$(echo "No\nLogout\nShutdown\nReboot" | $DMENU -p "Do you want to quit?")

case $confirmation in
    "Logout")
        wm="$(wmname)"
        case $wm in
            "herbstluftwm") 	exec herbstclient quit;;
            "dwm") 		exec kill -TERM $(pidof dwm);;
            "spectrwm")		exit;;
        esac
        ;;
    "Shutdown") 	exec shutdown -h now;;
    "Reboot") 		exec reboot;;
    *) 			exit;;
esac
