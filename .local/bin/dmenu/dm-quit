#!/bin/sh

confirmation=$(echo "No\nLogout\nShutdown\nReboot" | dmenu -i -p "Do you want to quit?")

case $confirmation in
    "Logout")
        wm="$(wmname)"
        case $wm in
            "herbstluftwm") 	exec herbstclient quit;;
            "dwm") 		exec kill -TERM $(pidof dwm);;
            "spectrwm")		exit;;
        esac
        ;;
    "Shutdown") 	exec shutdown -h now;;
    "Reboot") 		exec reboot;;
    *) 			exit;;
esac
