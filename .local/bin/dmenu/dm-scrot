#!/usr/bin/env bash

case $1 in
    1)      # Full screen
        exec maim ~/Im치genes/Capturas/captura_$(date +%s).png
        ;;
    2)      # Active window
        exec maim -i $(xdotool getactivewindow) ~/Im치genes/Capturas/ventana_$(date +%s).png
        ;;
    3)      # Mouse selection
        exec maim -s ~/Im치genes/Capturas/recorte_$(date +%s).png
        ;;
    4)      # Mouse selection (copy)
        exec maim -s | xclip -selection clipboard -t image/png
        ;;
    *)
        exec maim ~/Im치genes/Capturas/captura_$(date +%s).png
        ;;
esac
