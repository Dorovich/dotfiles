set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set period 1
set autoquit on
set mouse on

source "~/.config/lf/functions"

map x $$f
map X !$f
map o &mimeopen $f
map O $mimeopen --ask $f
map D delete
map R chmod
map Y $printf "%s" "$fx" | xclip -selection clipboard
map t dragon
map T dragon-all
map gr cd /
map . set hidden!
